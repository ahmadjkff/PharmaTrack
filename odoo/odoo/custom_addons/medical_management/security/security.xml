<odoo>
    <record id="medical_category" model="ir.module.category">
        <field name="name">Medical Management</field>
    </record>

    <record id="medical_doctor_group" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="medical_management.medical_category"/>
    </record>

    <record id="medical_receptionist_group" model="res.groups">
        <field name="name">Receptionist</field>
        <field name="category_id" ref="medical_management.medical_category"/>
    </record>

    <record id="medical_admin_group" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="medical_management.medical_category"/>
    </record>

    <record id="medical_appointment_doctor_rule" model="ir.rule">
        <field name="name">Doctors can only see their own appointments</field>
        <field name="model_id" ref="medical_management.model_appointment"/>
        <field name="domain_force">[('doctor_id.name', '=', user.partner_id.name)]</field>
        <field name="groups" eval="[(4, ref('medical_management.medical_doctor_group'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="medical_prescription_doctor_rule" model="ir.rule">
        <field name="name">Doctors can only see their own prescriptions</field>
        <field name="model_id" ref="medical_management.model_prescription"/>
        <field name="domain_force">[('doctor_id.name', '=', user.partner_id.name)]</field>
        <field name="groups" eval="[(4, ref('medical_management.medical_doctor_group'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>