<odoo>
    <record id="appointment_list_view" model="ir.ui.view">
        <field name="name">Appointment.list</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <list decoration-success="status in ('completed')" decoration-danger="(is_late)">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="appointment_date"/>
                <field name="status"/>
                <field name="notes" optional="1"/>
            </list>
        </field>
    </record>

    <record id="appointment_form_view" model="ir.ui.view">
        <field name="name">Appointment.form</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="scheduled_action" type="object" class="btn-primary" string="Set To Scheduled"
                                invisible="status in ('scheduled')" />
                        <button name="completed_action" type="object" class="btn-success" string="Set To Completed"
                                invisible="status in ('completed')" />
                        <button name="canceled_action" type="object" class="btn-danger" string="Cancel"
                                invisible="status in ('canceled')" />
                        <field name="status" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="patient_id">Patient Name</label>
                        <h1>
                            <field name="patient_id"/>
                        </h1>
                        <label for="doctor_id">Patient Name</label>
                        <h1>
                            <field name="doctor_id"/>
                        </h1>
                    </div>
                    <group string="Appointment Info.">
                        <field name="appointment_date"/>
                        <field name="prescription_id" widget="many2many_tags" readonly="1"/>
                        <field name="notes"/>
                    </group>
                    <button name="action_generate_prescription"
                        string="Generate Prescription"
                        type="object"
                        class="oe_highlight"
                        invisible="prescription_id"
                        groups="medical_management.medical_admin_group"
                    />
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="appointment_model_action" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">appointment</field>
        <field name="view_mode">list,form,calendar,graph</field>
    </record>

    <record id="check_appointment_date_cron" model="ir.cron">
        <field name="name">Appointment: check_appointment_date_action</field>
        <field name="model_id" ref="model_appointment"/>
        <field name="state">code</field>
        <field name="code">model.check_appointment_date_action()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
    </record>

    <record id="appointment_calendar" model="ir.ui.view">
        <field name="name">appointment calendar</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" mode="month" date_start="appointment_date">
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <record id="appointment_graph" model="ir.ui.view">
        <field name="name">Appointment Graph</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <graph string="Appointment Graph" sample="1">
                <field name="doctor_id"/>
            </graph>
        </field>
    </record>
</odoo>