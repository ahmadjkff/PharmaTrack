<odoo>
    <record id="medication_list_view" model="ir.ui.view">
        <field name="name">medication.list</field>
        <field name="model">medication</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="dosage"/>
                <field name="duration"/>
                <field name="prescription_id"/>
            </list>
        </field>
    </record>

    <record id="medication_form_view" model="ir.ui.view">
        <field name="name">medication.form</field>
        <field name="model">medication</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name">Name</label>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group string="Prescription Info.">
                        <field name="dosage"/>
                        <field name="duration"/>
                        <field name="prescription_id"/>
                    </group>
                    <hr/>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medication_model_action" model="ir.actions.act_window">
        <field name="name">Medication</field>
        <field name="res_model">medication</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>