    <record id="prescription_form_view" model="ir.ui.view">
        <field name="name">prescription.form</field>
        <field name="model">prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <group>
                        <field name="appointment_id"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="date_issued"/>
                        <field name="instructions"/>
                    </group>
                    <group>
                        <field name="medications" widget="many2many_tags">
                            <list>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="dosage"/>
                                <field name="duration"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="prescription_model_action" model="ir.actions.act_window">
        <field name="name">Prescription</field>
        <field name="res_model">prescription</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>