<odoo>
    <record id="doctor_weekly_report" model="ir.actions.report">
        <field name="name">Doctor Weekly Report</field>
        <field name="model">doctor</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_doctor"/>
        <field name="binding_type">report</field>
        <field name="report_name">medical_management.doctor_weekly_report_template</field>
    </record>

    <template id="doctor_weekly_report_template">
        <t t-call="web.html_container"/>
        <t t-call="web.external_layout">

            <div class="text-center">
                <h2>Appointment Schedule Report (This Week)</h2>
                <p>Date: <t t-esc="time.strftime('%Y-%m-%d')"/></p>
            </div>

            <t t-foreach="docs" t-as="doctor">
                <h3>Doctor: <t t-esc="doctor.name"/></h3>
                <p>Specialization: <t t-esc="doctor.specialization"/></p>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Appointment Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doctor.weekly_appointment_ids" t-as="o">
                            <tr>
                                <td><t t-esc="o.patient_id.name"/></td>
                                <td><t t-esc="o.appointment_date"/></td>
                                <td><t t-esc="o.status"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>